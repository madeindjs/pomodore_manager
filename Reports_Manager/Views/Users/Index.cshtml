

@{
    ViewBag.Title = "Users#Index";
}

<h2>Users#index</h2>


<table>

    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Nb. rapport(s)</th>
        </tr>
    </thead>

    <tbody>
        @foreach (Reports_Manager.Models.User user in ViewBag.users)
        {
            <tr>
                <td>@Html.ActionLink(user.Id.ToString(), "Details", new { Id = user.Id })</td>
                <td>@String.Format("{0} {1}", user.Firstname, user.Lastname)</td>
                <td>?</td>
            </tr>
        }
    </tbody>

</table>