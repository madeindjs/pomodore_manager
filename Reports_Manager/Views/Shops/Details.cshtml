
@{

    Reports_Manager.Models.Shop shop = @ViewBag.shop;
    ViewBag.Title = shop.Magasin ;
    shop.get_reports();


}
<h2>@Html.Partial("~/Views/Shops/_Link.cshtml", shop)</h2>

<h3>Informations</h3>
<address>@shop.print_adress()</address>

@Html.ActionLink("créer un rapport", "Create", "Reports", new { Id = shop.Otp }, null)


<h3>Meubles</h3>
@Html.Partial("~/Views/Cabinets/_List.cshtml", (List<Reports_Manager.Models.Shop>)ViewBag.cabinets)

<h3>Rapports</h3>

@Html.Partial("~/Views/Reports/_List.cshtml", shop.Reports )

<div id="resume_reports">
    <p>Total: <time>@shop.time_spend()</time></p>

    <p><small>(soit <strong>@shop.expense()</strong> de cout)</small></p>

</div>