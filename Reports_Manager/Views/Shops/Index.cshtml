
@{
    ViewBag.Title = "Shops#Index";
}

<h2>Shops#index</h2>


<table>

    <thead>
        <tr>
            <th>OTP</th>
            <th>Magasin</th>
            <th>Ville</th>
            <th>Facturation</th>
        </tr>
    </thead>

    <tbody>
        @foreach ( Reports_Manager.Models.Shop shop in ViewBag.shops)
        {
            
            <tr>
                @if (shop.Otp != null && shop.Date_fact != null)
                {
                    <td>@Html.ActionLink(shop.Otp, "Details", "Shops", new { id = shop.Id }, null)</td>
                    <td>@shop.Magasin</td>
                    <td>@shop.Ville</td>
                    <td>@String.Format("{0:dd-MM-yyyy}", shop.Date_fact)</td>
                }
                
            </tr>
        }
    </tbody>

</table>
